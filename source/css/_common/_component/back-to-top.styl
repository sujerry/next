.back-to-top {
  position: fixed;
  bottom: 50px;
  right: 90px;
  z-index: $zindex-5;
  width: 20px;
  height: 18px;
  padding: 10px;
  background: $w;
  color: red;
  cursor: pointer;
  -webkit-transform: translateZ(0);

  +mobile() {
    display: none;
  }
  +tablet() {
    display: none;
  }

  &:before {
    display: block;
    content: " ";
    margin-top: 3px;
    width: 0;
    height: 0;
    border-width: 0 9px 9px 9px;
    border-color: transparent transparent Aqua transparent;
    border-style: solid;
  }
}
